
<div id="map"
     style="width: 100%; height: 40vh;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="mt-0 p-3 mx-auto" style="width: 70%;">
  <% if @booking.car.photo.attached? %>
    <% @url = cl_image_path(@booking.car.photo.key, height: 300, crop: :scale) %>
  <% else %>
    <% @url = 'https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/2048px-No_image_available.svg.png' %>
  <% end %>

  <div class="row" style="max-width: 100%; width: 100%">
    <div class="col-3">
      <div class='car_card rounded p-3'>
        <div class="d-flex justify-content-start border-bottom mb-2 align-items-end">
          <h4><%= @booking.user.first_name.capitalize %> <%= @booking.user.last_name.capitalize %></h4>
        </div>
        <h5>Start Date: <%= @booking.start_date %></h5>
        <h5 class="mb-3">End Date: <%= @booking.end_date %></h5>
        <%= link_to 'Edit', edit_booking_path(@booking.id), class: 'btn btn-primary mb-2' %>
        <%= link_to 'Delete', booking_path(@booking), class: 'btn btn-danger ml-4 mb-2', method: 'delete', data: { confirm: "Are you sure?" } %>
      </div>
    </div>

    <div class="col-5">
      <div class="car_card rounded p-3 shadow d-flex justify-content-center mb-3">
        <%= image_tag @url, style: 'height:250px;'%>
      </div>
      <div class="car_card rounded p-3 shadow mb-3">
        <h1> <%= @booking.car.make %> <%= @booking.car.model %></h1>
        <div class="d-flex justify-content-between">
          <div>
            <h3> Type: <%= @booking.car.car_type %> </h3>
            <h4> Location: <%= @booking.car.suburb %></h4>
            <p>Transmission: <%= @booking.car.transmission %> </p>
          </div>
          <div>
            <h4>Seats: <%= @booking.car.seats %> </h4>
            <h5>Price per day: $<%= @booking.car.price %> </h5>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4">
      <div class="car_card rounded p-3">
        <%= simple_form_for([@booking, @review]) do |f| %>
        <%= f.input :rating, label: 'Rating of the car'%>
        <%= f.input :content, label: 'Thoughts on the car'%>
        <div class="form-actions">
            <%= f.button :submit, { class: 'btn btn-success w-100' } %>
          </div>
        <% end %>
      </div>
      <div class="p-3">
        <%= link_to 'Back', bookings_path, class: 'w-100 btn btn-primary mb-2' %>
      </div>
  </div>
</div>
