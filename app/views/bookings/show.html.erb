<div class="container">
  <h2>My Bookings!</h2>

  <div class="cards">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://media.istockphoto.com/photos/standing-desk-calendar-october-2021-picture-id1302146874?b=1&k=20&m=1302146874&s=170667a&w=0&h=viyj2FXYjKCi76ttg31hgn9ASgTvfsMDDIZ7vHsr2YI=" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">Your Booking</h5>
          <p class="card-text">Booking start date:  <%= @booking.start_date %>, <br>Booking end date:  <%= @booking.end_date %></p>
          <%= link_to 'Edit', edit_booking_path(@booking.id), class: 'btn btn-primary mb-2' %>
          <%= link_to 'Delete', booking_path(@booking), class: 'btn btn-danger ml-4 mb-2', method: 'delete', data: { confirm: "Are you sure?" } %>
        </div>
      </div>
  </div>
</div>
