<div class="tbanner" style="background-image: url('https://images.unsplash.com/photo-1471479917193-f00955256257?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1931&q=80');">
  <h1>Details Of Your Booking</h1>
</div>

<div class="bookings-show-container">
  <div class="top-img">
    <% if @booking.car.photo.attached? %>
      <% @url = cl_image_path(@booking.car.photo.key, height: 300, crop: :scale) %>
    <% else %>
      <% @url = 'https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/2048px-No_image_available.svg.png' %>
    <% end %>
    <%= image_tag @url, style: 'height:450px;'%>
  </div>

  <div class="bs-heading">
    <h1> <%= @booking.car.make %>, <%= @booking.car.model %></h1>
  </div>

  <div class="date-div">
    <h5>Start Date: <%= @booking.start_date %>, End Date: <%= @booking.end_date %></h5>
  </div>

  <div class="bs-details">
    <div>
      <h4> Type: <%= @booking.car.car_type %> </h4>
      <h4> Location: <%= @booking.car.suburb %></h4>
      <h4>Transmission: <%= @booking.car.transmission %> </h4>
    </div>
    <div>
    <h4>Seats: <%= @booking.car.seats %> </h4>
    <h4>Price per day: $<%= @booking.car.price %> </h4>
    </div>
  </div>

  <div class="bs-btns-div">
    <%= link_to 'Edit', edit_booking_path(@booking.id), class: 'btn btn-primary mb-2', id: "bs-btn-primary" %>
    <%= link_to 'Delete', booking_path(@booking), class: 'btn btn-danger ml-4 mb-2', id: "bs-show-btn-delete", method: 'delete', data: { confirm: "Are you sure?" } %>
  </div>

  <div class="bs-show-car-rating">
    <%= simple_form_for([@booking, @review]) do |f| %>
    <%= f.input :rating, label: 'Rating of the car'%>
    <%= f.input :content, label: 'Thoughts on the car'%>
    <div class="form-actions">
      <%= f.button :submit, { class: 'btn btn-success w-100' } %>
    </div>
    <% end %>
  </div>

</div>
