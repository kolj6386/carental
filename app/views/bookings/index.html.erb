
<div class="padding-top">

<div class="tbanner" style="background-image: url('https://images.unsplash.com/photo-1471479917193-f00955256257?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1931&q=80');">
  <h1>Your Bookings</h1>
</div>

  <div class = "row justify-content-around">
    <% @bookings.each do |booking| %>
      <% if booking.car.photo.attached? %>
          <% @url = cl_image_path(booking.car.photo.key, height: 300, crop: :scale) %>
      <% else %>
        <% @url = 'https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/2048px-No_image_available.svg.png' %>
      <% end %>
      <div class="col-4">
        <div class="h-50">
          <div class="card" style = "max-width: 24rem;">
            <%= link_to booking_path(booking) do %>
              <img class="card-img-top" src=<%= @url %> alt="Card image cap">
            <% end %>
            <div class="card-body">
              <h5 class="card-title booking-index-card-heading"><%= link_to "#{booking.car.make}, #{booking.car.model}", booking_path(booking) %></h5>
              <p class="card-text booking-index-card-subheading"><%= "Car is booked from: #{booking.start_date}"%></p>
              <p class="card-text booking-index-card-subheading"><%= "Until: #{booking.end_date}"%></p>
            </div>
          </div>
      </div>
    </div>
    <%end %>
  </div>
</div>
