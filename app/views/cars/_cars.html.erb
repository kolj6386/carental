<% cars.each do |car| %>

  <% if car.photo.attached? %>
    <% @url = cl_image_path(car.photo.key, height: 300, crop: :scale) %>
  <% else %>
    <% @url = 'https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/2048px-No_image_available.svg.png' %>
  <% end %>

  <div class="col-sm-4 mb-3">
  <div class="h-50">
    <div class="card">
      <img class="card-img-top" src=<%= @url %> style = "height: 200px">
      <div class="card-body">
        <h5 class="card-title"><%= link_to "#{car.make}, #{car.model}", cars_path(car.id) %></h5>
        <p class="card-text"><%= "This lovely #{car.make}, #{car.model} enjoys longs drives, can seat upto #{car.seats} and is a #{car.transmission}. Pickup from #{car.suburb}"%></p>
        <div class="text-center">
          <%= link_to "More Info", car_path(car) %>
        </div>
      </div>
      </div>
    </div>
  </div>
<% end %>
