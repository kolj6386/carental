<div class="outer-container" style="background-image: url('https://images.unsplash.com/photo-1471479917193-f00955256257?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1931&q=80');">
<div class="mx-auto" style="width: 400px;">
  <div class="mt-0 padding-top">
    <h2 class = "form-headings">Log in</h2></div>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <div class="py-2">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %></div>
      <div class="py-2">
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %></div>
      <div class= "d-flex justify-content-between">
        <div class="pb-2">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %></div>
        <div class="form-actions">
          <div>
            <%= render "devise/shared/forgot" %>
        </div>
      </div>
    </div>

  <div class="span2">
    <p><button class="btn btn-primary btn-block"><%= f.button :submit, "Log in" %></button></p>
    <%= render "devise/shared/signup" %>
</div>
<% end %>
</div>
</div>
